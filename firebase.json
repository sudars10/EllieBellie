{
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": "web-build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "api/news",
        "function": "newsProxy"
      },
      {
        "source": "api/news/**",
        "function": "newsProxy"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
} 
